<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/information_background" />

    <TextView
        android:id="@+id/textView_header_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_instructions_demographic_fragment"
        android:textAlignment="center"
        android:textAppearance="@style/appHeader"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/chips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >
        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="false">
            <com.google.android.material.chip.Chip
                android:id="@+id/diabetes"
                style="@style/myChipButton"
                android:text="@string/diabetes"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/autoimmune_disease"
                style="@style/myChipButton"
                android:text="@string/autoimmune_disease"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/asthma"
                style="@style/myChipButton"
                android:text="@string/asthma"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/pulmonary_disease"
                style="@style/myChipButton"
                android:text="@string/pulmonary_disease"/>
        </com.google.android.material.chip.ChipGroup>
        <com.google.android.material.chip.Chip
            android:id="@+id/chronic_kidney_disease"
            style="@style/myChipButton"
            android:text="@string/chronic_kidney_disease"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/hypertension"
            style="@style/myChipButton"
            android:text="@string/high_blood_pressure"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/cancer"
            style="@style/myChipButton"
            android:text="@string/cancer"/>
    </LinearLayout>
    <Button
        android:id="@+id/button_informationNext"
        style="@style/customButton"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_informationFragment"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>