<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFFF"
    tools:context=".ui.fragments.resultFragment.ResultFragment">

    <!--    SUMMARY-->

    <!--    HEAR RATE -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_summary"
        android:layout_width="310dp"
        android:layout_height="93dp"
        android:layout_marginTop="56dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_summaryText"
            android:layout_width="193dp"
            android:layout_height="74dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/good_result"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_heartRate"
        android:layout_width="310dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_summary">

        <TextView
            android:id="@+id/textView_heartRateText"
            android:layout_width="193dp"
            android:layout_height="74dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/your_heart_rate_is"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_heartRate"
        app:layout_constraintEnd_toEndOf="@+id/cardView_heartRate"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="@+id/cardView_heartRate"
        app:layout_constraintTop_toTopOf="@+id/cardView_heartRate"
        app:layout_constraintVertical_bias="0.615">

        <TextView
            android:id="@+id/textView_heartRate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="25sp"
            tools:layout_editor_absoluteX="270dp"
            tools:layout_editor_absoluteY="589dp" />
    </androidx.cardview.widget.CardView>

    <!--    OXYGEN -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_oxygen"
        android:layout_width="310dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_heartRate">

        <TextView
            android:id="@+id/textView_OxygenText"
            android:layout_width="196dp"
            android:layout_height="71dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/your_oxygen_saturation_is"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_oxygen"
        app:layout_constraintEnd_toEndOf="@+id/cardView_oxygen"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="@+id/cardView_oxygen"
        app:layout_constraintTop_toTopOf="@+id/cardView_oxygen"
        app:layout_constraintVertical_bias="0.615">

        <TextView
            android:id="@+id/textView_Oxygen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="25sp"
            tools:layout_editor_absoluteX="270dp"
            tools:layout_editor_absoluteY="589dp" />
    </androidx.cardview.widget.CardView>

    <!--    Respiration Rate-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_respiration"
        android:layout_width="310dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_oxygen">

        <TextView
            android:id="@+id/textView_respirationText"
            android:layout_width="194dp"
            android:layout_height="73dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/your_respiration_rate_is"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_respiration"
        app:layout_constraintEnd_toEndOf="@+id/cardView_respiration"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="@+id/cardView_respiration"
        app:layout_constraintTop_toTopOf="@+id/cardView_respiration"
        app:layout_constraintVertical_bias="0.615">

        <TextView
            android:id="@+id/textView_respiration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text=""
            android:textSize="25sp"
            tools:layout_editor_absoluteX="270dp"
            tools:layout_editor_absoluteY="589dp" />
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/button_finish"
        style="@style/customButton"
        android:layout_width="211dp"
        android:layout_height="54dp"
        android:layout_marginBottom="32dp"
        android:text="@string/finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_summary"
        android:layout_width="79dp"
        android:layout_height="72dp"
        android:src="@drawable/green_check"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_summary"
        app:layout_constraintEnd_toEndOf="@+id/cardView_summary"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@+id/cardView_summary"
        app:layout_constraintTop_toTopOf="@+id/cardView_summary" />
</androidx.constraintlayout.widget.ConstraintLayout>